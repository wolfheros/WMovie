<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="wolfheros.life.home">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="18"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WMovieActivity"
                  android:launchMode="singleTask"
                  android:screenOrientation="portrait"
                  android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".search.SearchDialogActivity"
                  android:launchMode="singleTop"
                  android:screenOrientation="portrait"
                  android:parentActivityName=".WMovieActivity">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable"/>
        </activity>

        <activity android:name=".detail.MoviesDetailActivity"
                  android:screenOrientation="portrait"
                  android:launchMode="singleTask">
        </activity>

        <activity android:name=".search.detail.SearchDetailActivity"
                  android:screenOrientation="portrait">

        </activity>
        <activity android:name=".kind.LasteMovieActivity"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".kind.detailmovie.LasteMoviesDetailActivity"
                  android:screenOrientation="portrait">
        </activity>

        <activity android:name=".setting.AppSettings"
                  android:screenOrientation="portrait"
            >

        </activity>
        <activity android:name=".aboutme.About"
                  android:screenOrientation="portrait"
            />
    </application>

</manifest>