<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Navigation Bar -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Navigation Bar -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="buttoncolor">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:buttonStyle"> @android:color/transparent</item>
    </style>

    <!-- Search View Theme-->

    <style name="SearchViewTheme" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:maxWidth">10000dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/ic_baseline_cursor</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:closeIcon">@drawable/baseline_close_white_24</item>
    </style>
    <style name="SettingStyle" parent="Theme.AppCompat.Light"/>

</resources>
